{% extends "header.html.twig" %}

{% block title %}
MOVIE CRITIC
{% endblock %}

{% block head %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
<style>
#search{
    width:550px;
    margin-left:30px;
}
.sliding{
    height:400px;
}
body{
  background-color:#595959
}
.fa-star{
  color:#d9ae30;
}


</style>
{% endblock %}

{% block nav_items %}
<form class="form-inline" method="post" action="{{path('search_movie')}}">
    <input class="form-control mr-sm-2 " id="search" name="moviename" type="search" placeholder="Search by movie name" aria-label="Search" required>
    <button class="btn btn-outline-light my-2 my-sm-0" name = "submit" type="submit"><i class="fa fa-search"></i></button>
</form>
{% endblock %}

{% block nav_logout %}
<div class="navbar-text">
    <a href="{{path('logout')}}" class="btn btn-primary" role="button" aria-pressed="true" title="Logout"><i class="fa fa-sign-out"></i>{{ app.user.name }}</a>
</div>

{% endblock %}

{% block content %}
<div class="container-fluid">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="margin-top: 10px;">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 sliding" src="/upload/avengersendgame_lob_log_01_1.png" alt="First slide" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 sliding" src="/upload/the-matrix-source-code.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 sliding" src="/upload/venum2.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 sliding" src="/upload/The Lord of the Rings: The Two Towersa.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 sliding" src="/upload/avetar.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  <h1 class="text-warning" style="margin-top:20px"><b>What to watch</b></h1>
  <h4 class="text-white">Top pickes for you</h4>

  <div class="movies">
    <div class="row">
    {% for movie in movielist %}
      <div class="col-sm-10 col-md-3 col-lg-3"  style="margin-top:30px">
        <div class="card" style="width: 250px; height: 400px">
          <a href="{{path('movie_details',{id: movie.id})}}"><img class="card-img-top" src="/upload/{{movie.poster}}" alt="Card image cap" style="height:270px" ></a>
          <div class="card-body">
            <h5 class="card-title">{{movie.title}}</h5>
            <p></p>
            <a href="{{path('media_galary',{id: movie.id})}}" class="btn btn-primary"><i class="fa fa-play-circle"></i> Wahtch trailer</a>
          </div>
        </div>
      </div>
    {% endfor %}
      
    <div>
  </div>
</div>
{% endblock %}